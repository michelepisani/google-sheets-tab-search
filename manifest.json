{
  "manifest_version": 3,
  "name": "Google Sheets Tab Search",
  "version": "1.2",
  "description": "Adds a search box to the 'All sheets' menu in Google Sheets.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}